            "200": {
              "description": "ok",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Cart"
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Нужна авторизация"
            }
          }
        },
        "post": {
          "security": [
            {
              "Bearer": []
            }
          ],
          "tags": [
            "carts"
          ],
          "summary": "Создать корзину",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "clientId": {
                      "type": "string",
                      "example": 144489840
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "ok",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Cart"
                  }
                }
              }
            },
            "401": {
              "description": "Нужна авторизация"
            }
          }
        }
      },
      "/carts/{cartId}": {
        "put": {
          "security": [
            {
              "Bearer": []
            }
          ],
          "tags": [
            "carts"
          ],
          "summary": "Обновить корзину",
          "description": "Добавляем/удаляем (см. intention) товары, указывая их id/optionId.",
          "parameters": [
            {
              "name": "cartId",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string",
                "example": 1
              }
            }
          ],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "productId",
                    "optionId",
                    "intention"
                  ],
                  "properties": {
                    "productId": {
                      "type": "string",
                      "example": 1
                    },
                    "optionId": {
                      "type": "string",
                      "example": 1
                    },
                    "intention": {
                      "type": "string",
                      "enum": [
                        "add",
                        "remove"
                      ]
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "ok",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Cart"
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Ошибка",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "comment": {
                        "type": "string",
                        "enum": [
                          "Такого товара нет",
                          "Товар недоступен",
                          "Другая человекочитаемая ошибка"
                        ]
                      }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Ошибка указания корзины",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "comment": {
                        "type": "string",
                        "enum": [
                          "Корзина уже закрыта",
                          "Такой корзины не существует"
                        ]
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "delete": {
          "security": [
            {
              "Bearer": []
            }
          ],
          "tags": [
            "carts"
          ],
          "summary": "Сбросить корзину",
          "description": "Деактивирует текущую корзину, создает новую и возвращает ее ключ.",
          "parameters": [
            {
              "name": "cartId",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string",
                "example": 1
              }
            }
          ],
          "responses": {
            "200": {
              "description": "ok",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "cartId": {
                        "type": "string",
                        "example": 2,
                        "description": "ключ вновь созданной корзины"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Ошибка",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "comment": {
                        "type": "string",
                        "example": [
                          "Корзина уже закрыта",
                          "Другая человекочитаемая ошибка"
                        ]
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Нужна авторизация"
            },
            "404": {
              "description": "Ошибка указания корзины",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "comment": {
                        "type": "string",
                        "enum": [
                          "Такой корзины не существует"
                        ]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/orders": {
