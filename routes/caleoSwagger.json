              "schema": {
                "type": "string",
                "example": "тряпочки"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "ok",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/SectionListing"
