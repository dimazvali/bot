                    "cartId"
                  ],
                  "properties": {
                    "userId": {
                      "type": "string",
                      "example": 144489840
                    },
                    "cartId": {
                      "type": "string",
                      "example": 2
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
