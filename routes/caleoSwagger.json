    "components": {
      "securitySchemes": {
        "Bearer": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      },
      "schemas": {
        "Cart": {
          "description": "Объект корзины",
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "format": "int64",
              "example": 10
            },
            "userId": {
              "type": "string",
              "example": 144489840
            },
            "active": {
              "type": "boolean",
              "example": true
            },
            "createdAt": {
              "type": "string",
              "example": "2024-05-24T08:15:09.050Z"
            },
            "updatedAt": {
              "type": "string",
              "example": "2024-05-24T09:15:09.050Z"
            },
            "closedAt": {
              "nullable": true,
              "type": "string",
              "example": "2024-06-24T08:15:09.050Z"
            },
            "itemsCount": {
              "type": "integer",
              "format": "int64",
              "example": 10
            }
          }
        },
        "ProductProperty": {
          "description": "Особенность товара",
          "type": "object",
          "properties": {
            "code": {
              "type": "string",
              "example": "wattage"
            },
            "name": {
              "type": "string",
              "example": "мощность"
            },
            "value": {
              "type": "string",
              "example": 123
            }
          }
        },
        "Description": {
          "type": "string",
          "example": "Полезное и насыщенное описание.",
          "description": "text, не HTML"
        },
        "Pic": {
          "type": "string",
          "example": "https://cataas.com/cat?width=600&height=400",
          "description": "Фотография"
        },
        "SectionListing": {
          "description": "Раздел для отрисовки каталога",
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "format": "int64",
              "example": 10
            },
            "active": {
              "type": "boolean",
              "example": true
            },
            "name": {
              "type": "string",
              "example": "Полезные тряпочки"
            },
            "image": {
              "nullable": true,
              "allOf": [
                {
                  "$ref": "#/components/schemas/Pic"
                }
              ]
            },
            "description": {
              "nullable": true,
              "allOf": [
                {
                  "$ref": "#/components/schemas/Description"
                }
              ]
            }
          }
        },
        "ProductDefault": {
          "description": "Базовый класс товара",
          "type": "object",
          "properties": {
            "active": {
              "type": "boolean",
              "example": true
            },
            "id": {
              "type": "integer",
              "format": "int64",
              "example": 10
            },
            "name": {
              "type": "string",
              "example": "Полезная тряпочка"
            },
            "image": {
              "type": "string",
              "example": "https://cataas.com/cat?width=600&height=400"
            },
            "parentSection": {
              "$ref": "#/components/schemas/SectionListing"
            }
          }
        },
        "ProductListing": {
          "allOf": [
            {
              "$ref": "#/components/schemas/ProductDefault"
            },
            {
              "type": "object",
              "properties": {
                "minPrice": {
                  "type": "number",
                  "format": "int64",
                  "example": 100.01,
                  "description": "Минимальная стоимость"
                },
                "options": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ProductOption"
                  }
                }
              }
            }
          ],
          "description": "Продукт для отрисовки каталога"
        },
        "ProductCart": {
          "description": "Товар для корзины",
          "type": "object",
          "allOf": [
            {
              "$ref": "#/components/schemas/ProductDefault"
            },
            {
              "type": "object",
              "properties": {
                "quantity": {
                  "type": "number",
                  "example": 10
                },
                "price": {
                  "type": "number",
                  "example": 100
                },
                "total": {
                  "type": "number",
                  "example": 100
                }
              }
            },
            {
              "type": "object",
              "properties": {
                "selectedOptions": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ProductOption"
                  }
                }
              }
            }
          ]
        },
        "ProductOption": {
          "description": "Опция товара",
          "type": "object",
          "properties": {
            "active": {
              "type": "boolean",
              "example": true
            },
            "id": {
              "type": "integer",
              "format": "int64",
              "example": 1
            },
            "price": {
              "type": "integer",
              "format": "int64",
              "example": 101.1
            },
            "left": {
              "type": "integer",
              "format": "int64",
              "example": 10
            },
            "properties": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/ProductProperty"
              }
            }
          }
        },
        "OrderListing": {
          "description": "Заказ для отрисовки списка",
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "format": "int64",
              "example": 666
            },
            "userId": {
              "type": "string",
              "example": 144489840
            },
            "createdAt": {
              "type": "string",
              "example": "2024-05-24T08:15:09.050Z"
            },
            "closedAt": {
              "type": "string",
              "example": "2024-06-24T08:15:09.050Z"
            },
            "totalPrice": {
              "type": "integer",
              "format": "int64",
              "example": 10000
            },
            "status": {
              "type": "string",
              "enum": [
                "toBePayed",
                "processing",
                "shipping",
                "delivered",
                "canceled"
              ]
            }
          }
        }
      }
    }
