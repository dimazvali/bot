              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/OrderListing"
                  }
                }
              }
            },
            "401": {
              "description": "Нужна авторизация"
            }
          }
        }
      },
      "/orders/{orderId}": {
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "example": 666
            }
          }
        ],
        "get": {
          "security": [
            {
              "Bearer": []
            }
          ],
          "tags": [
            "orders"
          ],
          "responses": {
            "200": {
              "description": "ok",
              "content": {
                "application/json": {
                  "schema": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/OrderListing"
                      },
                      {
                        "type": "object",
                        "properties": {
                          "products": {
                            "type": "array",
