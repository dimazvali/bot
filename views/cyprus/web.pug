
doctype html
html
  head
    title Cyprus News
    //- script(src='https://telegram.org/js/telegram-web-app.js')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name='description' content='Попробуйте — вам понравится.')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.20.0/axios.js')
    script(src='/javascripts/common.js')
    
    script!=`${start?`let start="${start}"`:'let start=null'}`
    script!=`let token="${token}"`
    //- script(src="https://cdn.jsdelivr.net/jsbarcode/3.3.20/JsBarcode.all.min.js") 
    link(rel='stylesheet', href='/stylesheets/cyprus/style.css')
    link(rel='stylesheet', href='/stylesheets/cyprus/web.css')
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700;900&display=swap")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700;900&family=Rubik+80s+Fade&display=swap")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;900&display=swap")
    script(src="https://cdn.amcharts.com/lib/5/index.js")
    script(src="https://cdn.amcharts.com/lib/5/xy.js")
    script(src="https://cdn.amcharts.com/lib/5/themes/Animated.js")
  body.mobile
    
    #left
        h3(onclick="showNews()")        Публикации
        h3(onclick="showUsers()")       Пользователи
        h3(onclick="location.reload()")        Логи

        
    
    #menu(onclick="left.classList.toggle('active')")

    #main
        h2 Логи
        for l in logs 
            .divided
                p.info!=new Date(l.createdAt._seconds*1000).toLocaleString()
                p!=l.text
                if(l.ticket)
                  button(onclick!="showTicket(false,'"+l.ticket+"')") открыть билет
                if(l.course) 
                  button(onclick!="showCourse(false,'"+l.course+"')") открыть курс
                if(l.class) 
                  button(onclick!="showClass(false,'"+l.class+"')") открыть ивент
                if(l.user) 
                  button(onclick!="showUser(false,'"+l.user+"')") открыть профиль
                if(l.author) 
                  button(onclick!="showAuthor(false,'"+l.author+"')") открыть автора
    script!=`let start="${start}"`
    script(src='/javascripts/cyprus/web.js')
    