
doctype html
html
  head
    title PressPapers
    //- script(src='https://telegram.org/js/telegram-web-app.js')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(type='description' content='Попробуйте — вам понравится.')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.20.0/axios.js')
    script(src='/javascripts/common.js')
    
    script!=`${start?`let start="${start}"`:'let start=null'}`
    script!=`let token="${token}"`
    //- script(src="https://cdn.jsdelivr.net/jsbarcode/3.3.20/JsBarcode.all.min.js") 
    link(rel='stylesheet', href='/stylesheets/papers/webapp.css')
    link(rel='stylesheet', href='/stylesheets/papers/web.css')
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700;900&display=swap")
    script(src="https://cdn.amcharts.com/lib/5/index.js")
    script(src="https://cdn.amcharts.com/lib/5/xy.js")
    script(src="https://cdn.amcharts.com/lib/5/themes/Animated.js")
  body.mobile
    
    #left
        h3(onclick="showUsers()")     Пользователи
        h3(onclick="showSchedule()")  Расписание
        h3(onclick="showHalls()")  Залы
        h3(onclick="showAuthors()")   Авторы
        h3(onclick="showLogs()")      Логи
    
    #menu(onclick="left.classList.toggle('active')")

    #main
        h2 Логи
        for l in logs 
            .divided
                p.info!=new Date(l.createdAt._seconds*1000).toLocaleString()
                p!=l.text
                if(l.ticket)
                  button.dark.dateButton(onclick!="showTicket(false,'"+l.ticket+"')") открыть билет
                if(l.class) 
                  button.dark.dateButton(onclick!="showClass(false,'"+l.class+"')") открыть ивент
                if(l.user) 
                  button.dark.dateButton(onclick!="showUser(false,'"+l.user+"')") открыть профиль
                if(l.author) 
                  button.dark.dateButton(onclick!="showAuthor(false,'"+l.author+"')") открыть автора
    script(src='/javascripts/papers/web.js')