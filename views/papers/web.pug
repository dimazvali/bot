  body.mobile
    
    #left
        h3(onclick="showAuthors()")     Авторы
        h3(onclick="showTickets()")     Билеты
        h3(onclick="showWine()")        Вино
        h3(onclick="showDeposits()")    Депозиты
        h3(onclick="showHalls()")       Залы
        h3(onclick="showCoworking()")   Коворкинг
        h3(onclick="showLogs()")        Логи
        h3(onclick="showStandAlone()")  Отдельные страницы
        h3(onclick="showMeetingRoom()") Переговорка
        h3(onclick="showUsers()")       Пользователи
        //- h3(onclick="showViews()")       Просмотры
        h3(onclick="showSchedule()")    Расписание мероприятий
        h3(onclick="showNews()")        Рассылки
        h3(onclick="showMessages()")    Сообщения
        h3(onclick="showPlans()")       Тарифы
        h3(onclick="showRC()")          randomCoffee
        
    #menu(onclick="left.classList.toggle('active')")

    #main
        h2 Логи
        for l in logs 
            .sDivided
                p.info!=new Date(l.createdAt._seconds*1000).toLocaleString()
                p!=l.text
                .flex
                  if(l.ticket)
                    button.dark.dateButton(onclick!="showTicket(false,'"+l.ticket+"')") открыть билет
                  if(l.class) 
                    button.dark.dateButton(onclick!="showClass(false,'"+l.class+"')") открыть ивент
                  if(l.user) 
                    button.dark.dateButton(onclick!="showUser(false,'"+l.user+"')") открыть профиль
                  if(l.author) 
                    button.dark.dateButton(onclick!="showAuthor(false,'"+l.author+"')") открыть автора
    script(src='/javascripts/papers/web.js')
    script(src='/javascripts/papersCommon.js')