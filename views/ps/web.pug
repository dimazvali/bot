
doctype html
html
  head
    title Профсоюз Свидетелей
    //- script(src='https://telegram.org/js/telegram-web-app.js')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name='description' content='Попробуйте — вам понравится.')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.20.0/axios.js')
    script(src='/javascripts/common.js')
    
    script!=`${start?`let start="${start}"`:'let start=null'}`
    script!=`let token="${token}"`
    //- script(src="https://cdn.jsdelivr.net/jsbarcode/3.3.20/JsBarcode.all.min.js") 
    link(rel='stylesheet', href='/stylesheets/papers/webapp.css')
    link(rel='stylesheet', href='/stylesheets/papers/web.css')
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700;900&display=swap")
    script(src="https://cdn.amcharts.com/lib/5/index.js")
    script(src="https://cdn.amcharts.com/lib/5/xy.js")
    script(src="https://cdn.amcharts.com/lib/5/themes/Animated.js")
  body.mobile
    
    #left
        h3(onclick="showUsers()")       Пользователи
        h3(onclick="showTasks()")       Задания
        h3(onclick="showNews()")    Рассылки
        h3(onclick="showIncoming()")    Входящие
        h3(onclick="showUnseen()")      Неразобранное
        h3(onclick="showTags()")        Теги
        h3(onclick="showLogs()")        Логи
        
    
    #menu(onclick="left.classList.toggle('active')")

    #main
        h2 Логи
        for l in logs 
            .sDivided
                p.info!=new Date(l.createdAt).toLocaleString()
                //- p.info!=
                p!=l.text
                if(l.user)
                    button.dateButton.dark(onclick=`showUser(false,${l.user})`) Открыть профиль
                if(l.task)
                    button.dateButton.dark(onclick=`showTask("${l.task}")`) Открыть задание
    script(src='/javascripts/ps/web.js')
    script(src='/javascripts/papersCommon.js')