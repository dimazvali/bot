  body.mobile
    
    #left
        h3(onclick="s(this),showAuctions()")        Аукционы
        h3(onclick="s(this),showIterations()")      Розыгрыши
        h3(onclick="s(this),showUsers()")           Пользователи
            
    
    #menu(onclick="left.classList.toggle('active')")

    #main
        h2 Логи
        for l in logs 
            .divided
                p.info!=new Date(l.createdAt._seconds*1000).toLocaleString()
                p!=l.text
                if(l.ticket)
                  button(onclick!="showTicket(false,'"+l.ticket+"')") открыть билет
                if(l.course) 
                  button(onclick!="showCourse(false,'"+l.course+"')") открыть курс
                if(l.class) 
                  button(onclick!="showClass(false,'"+l.class+"')") открыть ивент
                if(l.user) 
                  button(onclick!="showUser(false,'"+l.user+"')") открыть профиль
                if(l.author) 
                  button(onclick!="showAuthor(false,'"+l.author+"')") открыть автора
