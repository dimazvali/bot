
doctype html
html
  head
    title!=(name ? `${name} | ` : '')+  `dimazvali.com`
    meta(property='og:title' content!=(name || `dimazvali.com`))
    
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    
    meta(name='description' content!=(description || 'Давайте дружить.'))
    meta(property='og:description' content!=(description || 'Давайте дружить.'))
    block head 
    link(rel='icon', type="image/x-icon", href='/images/dimazvali/favicon.ico')
    
    if (image)
      meta(property='og:image' content!=image)
    
    script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.20.0/axios.js')
    script(src='/javascripts/common.js')
    //- script(src='/javascripts/dimazvali/web.js')
    block style 
    link(rel='stylesheet', href='/stylesheets/dimazvali/web.css')
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Oi:wght@100;200;400;700;900&family=Oswald:wght@200;400;700;900&display=swap")
  body
    a.title(href="/") dimazvali.com
    block back
    #content
      block content 
  include footer